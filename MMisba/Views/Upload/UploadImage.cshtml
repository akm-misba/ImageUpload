@model ImageCreateModel
@{
    ViewData["Title"] = "UploadImage";
}

<h1>UploadImage</h1>
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create A New Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create Product</li>
                </ol>
            </div>
        </div>
    </div>
 
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Create A New Product</h3>
                    </div>

<form class="form-horizontal" method="post" asp-controller="Upload"
      asp-action="UploadImage" asp-antiforgery="true" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="card-body">
        @*<div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Id" class="form-control"
                       id="id" placeholder="Id">
            </div>
        </div>*@

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Name" class="form-control"
                       id="name" placeholder="Enter You Name">
            </div>
        </div>



        <div class="from-group">

            <label asp-for="ImagePath" class="col-sm-2 col-form-label">ImagePath</label>
            <div class="col-sm-10">
                <input type="file" asp-for="ImagePath">
            </div>
            <span class="text-danger" asp-validation-for="ImagePath"></span>
        </div>
        <div class="from-group">
            <input type="submit" class="btn btn-sm btn-primary float-right" value="Save" />
        </div>

    </div>

<div class="card-footer">
    <button type="submit" class="btn btn-info">Create</button>
    <a asp-action="UploadImage" asp-controller="Upload"
       class="btn btn-default float-right">Cancel</a>
</div>

</form>
                </div>
            </div>
        </div>
    </div>
</section>

